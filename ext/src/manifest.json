{
	"name": "omnom",
	"version": "0.13.0",
	"manifest_version": 3,
	"description": "Bookmarking & snapshotting extension for omnom services.",
	"content_scripts": [
		{
			"js": [
				"site.js"
			],
            "all_frames": true,
			"matches": [
				"http://*/*",
				"https://*/*",
				"ftp://*/*"
			]
		}
	],
	"action": {
		"default_icon": "icons/omnom.png",
		"default_popup": "popup.html"
    },
    "background": {
    },
	"icons": {
		"256": "icons/omnom256.png",
		"128": "icons/omnom128.png",
		"32": "icons/omnom32.png",
		"48": "icons/omnom48.png"
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},
    "host_permissions": [
        "*://*/*"
	],
	"permissions": [
		"activeTab",
		"storage",
        "scripting"
    ]
}
